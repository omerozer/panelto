{
  "name": "admin-panel",
  "version": "1.0.0",
  "description": "Node.js Admin Panel with SQLite and Tailwind CSS",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "build:css": "tailwindcss -i ./public/css/input.css -o ./public/css/output.css --watch",
    "build": "tailwindcss -i ./public/css/input.css -o ./public/css/output.css --minify",
    "prod": "NODE_ENV=production node app.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "bcrypt": "^5.1.1",
    "express-session": "^1.17.3",
    "ejs": "^3.1.9",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "tailwindcss": "^3.3.5"
  },
  "keywords": ["nodejs", "sqlite", "tailwind", "admin", "panel"],
  "author": "",
  "license": "MIT"
}
