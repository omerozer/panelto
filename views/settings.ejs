<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ayarlar - Admin Panel</title>
    <link href="/css/output.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
</head>
<body class="bg-gray-100">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="w-64 bg-gray-800 text-white">
            <div class="p-4">
                <h1 class="text-xl font-bold">Admin Panel</h1>
            </div>
            
            <nav class="mt-8">
                <a href="/dashboard" class="flex items-center px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition duration-200">
                    <i data-feather="home" class="w-5 h-5 mr-3"></i>
                    Dashboard
                </a>
                
                <a href="/users" class="flex items-center px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition duration-200">
                    <i data-feather="users" class="w-5 h-5 mr-3"></i>
                    Kullanıcılar
                </a>
                
                <a href="/reports" class="flex items-center px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition duration-200">
                    <i data-feather="bar-chart-2" class="w-5 h-5 mr-3"></i>
                    Raporlar
                </a>
                
                <a href="/settings" class="flex items-center px-4 py-3 bg-gray-700 text-white">
                    <i data-feather="settings" class="w-5 h-5 mr-3"></i>
                    Ayarlar
                </a>
            </nav>
        </div>
        
        <!-- Main Content -->
        <div class="flex-1 flex flex-col">
            <!-- Header -->
            <header class="bg-white shadow-sm border-b border-gray-200">
                <div class="flex justify-between items-center px-6 py-4">
                    <div class="flex items-center">
                        <h2 class="text-xl font-semibold text-gray-800">Ayarlar</h2>
                    </div>
                    
                    <div class="flex items-center space-x-4">
                        <span class="text-gray-600">Hoş geldin, <%= user.username %></span>
                        <a href="/logout" class="bg-red-500 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm transition duration-200">
                            Çıkış Yap
                        </a>
                    </div>
                </div>
            </header>
            
            <!-- Page Content -->
            <main class="flex-1 p-6">
                <div class="w-full">
                    
                    <% if (message) { %>
                        <div class="mb-6 p-4 rounded-md <%= messageType === 'success' ? 'bg-green-100 border border-green-400 text-green-700' : 'bg-red-100 border border-red-400 text-red-700' %>">
                            <%= message %>
                        </div>
                    <% } %>
                    
                    <!-- Tab Navigation -->
                    <div class="mb-6 border-b border-gray-200">
                        <nav class="-mb-px flex space-x-8">
                            <button onclick="showTab('profile')" id="profile-tab" class="tab-button active py-2 px-1 border-b-2 border-blue-500 font-medium text-sm text-blue-600">
                                Profil Ayarları
                            </button>
                            <button onclick="showTab('smtp')" id="smtp-tab" class="tab-button py-2 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300">
                                SMTP Ayarları
                            </button>
                            <button onclick="showTab('system')" id="system-tab" class="tab-button py-2 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300">
                                Sistem Ayarları
                            </button>
                        </nav>
                    </div>
                    
                    <!-- Profile Tab -->
                    <div id="profile-tab-content" class="tab-content">
                        <div class="bg-white rounded-lg shadow p-6 mb-6">
                            <h3 class="text-lg font-semibold text-gray-800 mb-4">Profil Ayarları</h3>
                            <form>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-2">
                                            Kullanıcı Adı
                                        </label>
                                        <input type="text" 
                                               value="<%= user.username %>" 
                                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-2">
                                            E-posta
                                        </label>
                                        <input type="email" 
                                               value="<%= user.email %>" 
                                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                                    </div>
                                </div>
                                <div class="mt-6">
                                    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white px-4 py-2 rounded-md">
                                        Profili Güncelle
                                    </button>
                                </div>
                            </form>
                        </div>
                        
                        <div class="bg-white rounded-lg shadow p-6 mb-6">
                            <h3 class="text-lg font-semibold text-gray-800 mb-4">Şifre Değiştir</h3>
                            <form>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-2">
                                            Mevcut Şifre
                                        </label>
                                        <input type="password" 
                                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-2">
                                            Yeni Şifre
                                        </label>
                                        <input type="password" 
                                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                                    </div>
                                </div>
                                <div class="mt-6">
                                    <button type="submit" class="bg-green-500 hover:bg-green-700 text-white px-4 py-2 rounded-md">
                                        Şifreyi Değiştir
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                    
                    <!-- SMTP Tab -->
                    <div id="smtp-tab-content" class="tab-content hidden">
                        <div class="bg-white rounded-lg shadow p-6 mb-6">
                            <h3 class="text-lg font-semibold text-gray-800 mb-4">SMTP Ayarları</h3>
                            
                            <% smtpSettings.forEach(function(smtp) { %>
                                <div class="border border-gray-200 rounded-lg p-6 mb-6">
                                    <h4 class="text-lg font-medium text-gray-800 mb-4"><%= smtp.provider %> SMTP Ayarları</h4>
                                    
                                    <form method="POST" action="/settings/smtp" class="space-y-4">
                                        <input type="hidden" name="provider" value="<%= smtp.provider %>">
                                        
                                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                            <div>
                                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                                    SMTP Host
                                                </label>
                                                <input type="text" 
                                                       name="host"
                                                       value="<%= smtp.host %>" 
                                                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                                            </div>
                                            <div>
                                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                                    Port
                                                </label>
                                                <input type="number" 
                                                       name="port"
                                                       value="<%= smtp.port %>" 
                                                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                                            </div>
                                        </div>
                                        
                                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                            <div>
                                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                                    Kullanıcı Adı
                                                </label>
                                                <input type="text" 
                                                       name="username"
                                                       value="<%= smtp.username %>" 
                                                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                                            </div>
                                            <div>
                                                <label class="block text-sm font-medium text-gray-700 mb-2">
                                                    Şifre
                                                </label>
                                                <input type="password" 
                                                       name="password"
                                                       value="<%= smtp.password %>" 
                                                       class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                                            </div>
                                        </div>
                                        
                                        <div class="flex items-center">
                                            <input type="checkbox" 
                                                   name="secure"
                                                   id="secure-<%= smtp.id %>"
                                                   <%= smtp.secure ? 'checked' : '' %>
                                                   class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                                            <label for="secure-<%= smtp.id %>" class="ml-2 block text-sm text-gray-900">
                                                SSL/TLS Kullan
                                            </label>
                                        </div>
                                        
                                        <div class="flex justify-between items-center">
                                            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white px-4 py-2 rounded-md">
                                                Ayarları Kaydet
                                            </button>
                                            
                                            <div class="flex items-center space-x-4">
                                                <input type="email" 
                                                       placeholder="Test e-posta adresi"
                                                       id="test-email-<%= smtp.id %>"
                                                       class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                                                <button type="button" 
                                                        onclick="sendTestEmail('<%= smtp.provider %>', '<%= smtp.id %>')"
                                                        class="bg-green-500 hover:bg-green-700 text-white px-4 py-2 rounded-md">
                                                    Test Maili Gönder
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                    
                    <!-- System Tab -->
                    <div id="system-tab-content" class="tab-content hidden">
                        <div class="bg-white rounded-lg shadow p-6 mb-6">
                            <h3 class="text-lg font-semibold text-gray-800 mb-4">Sistem Ayarları</h3>
                            <div class="space-y-4">
                                <div class="flex items-center justify-between">
                                    <div>
                                        <h4 class="font-medium text-gray-800">E-posta Bildirimleri</h4>
                                        <p class="text-sm text-gray-600">Sistem güncellemeleri için e-posta al</p>
                                    </div>
                                    <label class="relative inline-flex items-center cursor-pointer">
                                        <input type="checkbox" class="sr-only peer" checked>
                                        <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                                    </label>
                                </div>
                                
                                <div class="flex items-center justify-between">
                                    <div>
                                        <h4 class="font-medium text-gray-800">Otomatik Yedekleme</h4>
                                        <p class="text-sm text-gray-600">Veritabanını otomatik yedekle</p>
                                    </div>
                                    <label class="relative inline-flex items-center cursor-pointer">
                                        <input type="checkbox" class="sr-only peer">
                                        <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                                    </label>
                                </div>
                                
                                <div class="flex items-center justify-between">
                                    <div>
                                        <h4 class="font-medium text-gray-800">Debug Modu</h4>
                                        <p class="text-sm text-gray-600">Geliştirici modunu etkinleştir</p>
                                    </div>
                                    <label class="relative inline-flex items-center cursor-pointer">
                                        <input type="checkbox" class="sr-only peer">
                                        <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                                    </label>
                                </div>
                            </div>
                            <div class="mt-6">
                                <button class="bg-purple-500 hover:bg-purple-700 text-white px-4 py-2 rounded-md">
                                    Ayarları Kaydet
                                </button>
                            </div>
                        </div>
                        
                        <!-- Tehlikeli Bölge -->
                        <div class="bg-red-50 border border-red-200 rounded-lg p-6">
                            <h3 class="text-lg font-semibold text-red-800 mb-4">Tehlikeli Bölge</h3>
                            <p class="text-red-700 mb-4">Bu işlemler geri alınamaz!</p>
                            <button class="bg-red-500 hover:bg-red-700 text-white px-4 py-2 rounded-md">
                                Veritabanını Sıfırla
                            </button>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    
    <script>
        feather.replace();
        
        function showTab(tabName) {
            // Hide all tab contents
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.add('hidden');
            });
            
            // Remove active class from all tabs
            document.querySelectorAll('.tab-button').forEach(button => {
                button.classList.remove('active', 'border-blue-500', 'text-blue-600');
                button.classList.add('border-transparent', 'text-gray-500');
            });
            
            // Show selected tab content
            document.getElementById(tabName + '-tab-content').classList.remove('hidden');
            
            // Add active class to selected tab
            document.getElementById(tabName + '-tab').classList.add('active', 'border-blue-500', 'text-blue-600');
            document.getElementById(tabName + '-tab').classList.remove('border-transparent', 'text-gray-500');
        }
        
        function sendTestEmail(provider, smtpId) {
            const testEmail = document.getElementById('test-email-' + smtpId).value;
            
            if (!testEmail) {
                alert('Lütfen test e-posta adresini girin');
                return;
            }
            
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/settings/test-email';
            
            const providerInput = document.createElement('input');
            providerInput.type = 'hidden';
            providerInput.name = 'provider';
            providerInput.value = provider;
            
            const emailInput = document.createElement('input');
            emailInput.type = 'hidden';
            emailInput.name = 'testEmail';
            emailInput.value = testEmail;
            
            form.appendChild(providerInput);
            form.appendChild(emailInput);
            document.body.appendChild(form);
            form.submit();
        }
    </script>
</body>
</html>
